{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Minimum Information about a Tailoring Enzyme/Maturase Data Standard",
  "additionalProperties": false,
  "required": [
    "accession",
    "status",
    "changelog",
    "enzyme",
    "reactions"
  ],
  "properties": {
    "accession": {
      "title": "MITE accession number/identifier.",
      "$ref": "#/$defs/accession"
    },
    "status": {
      "title": "Track status of entry.",
      "$ref": "#/$defs/status"
    },
    "retirementReasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "comment": {
      "title": "Any additional information about this entry",
      "type": "string"
    },
    "changelog": {
      "title": "Log tracking changes in entry.",
      "type": "array",
      "minItems": 1,
      "additionalProperties": false,
      "items": {
        "type": "object",
        "required": [
          "version",
          "date",
          "comment",
          "contributors",
          "reviewers"
        ],
        "additionalProperties": false,
        "properties": {
          "version": {
            "title": "The version of the entry.",
            "$ref": "#/$defs/version"
          },
          "date": {
            "title": "The date of the modification.",
            "type": "string",
            "format": "date"
          },
          "comment": {
            "title": "A brief summary of changes.",
            "type": "string"
          },
          "contributors": {
            "title": "A list of identifiers of submitters.",
            "type": "array",
            "items": {
              "title": "An ORCID identifier",
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "reviewers": {
            "title": "A list of identifiers of reviewers.",
            "type": "array",
            "items": {
              "title": "An ORCID identifier",
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
          }
        }
      }
    },
    "enzyme": {
      "title": "(Meta)data about the enzyme described by entry.",
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "databaseIds",
        "references"
      ],
      "properties": {
        "name": {
          "title": "Protein name, e.g. 'NisB'.",
          "type": "string"
        },
        "description": {
          "title": "Brief description of the enzyme function.",
          "type": "string"
        },
        "cofactors": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "inorganic": {
              "title": "One or more inorganic cofactors (ions).",
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "$ref": "#/$defs/inorganic"
              }
            },
            "organic": {
              "title": "One or more organic cofactors (coenzymes/cosubstrates/prosthetic groups).",
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "$ref": "#/$defs/organic"
              }
            }
          }
        },
        "databaseIds": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "uniprot": {
              "$ref": "#/$defs/uniprot"
            },
            "genpept": {
              "$ref": "#/$defs/genpept"
            },
            "mibig": {
              "$ref": "#/$defs/mibig"
            },
            "wikidata": {
              "$ref": "#/$defs/wikidata"
            }
          }
        },
        "auxiliaryEnzymes": {
          "title": "Specify any required auxiliary enzymes that are co-forming the maturation machinery.",
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "title": "Protein name, e.g. 'NisC'.",
                "type": "string"
              },
              "description": {
                "title": "Brief description of function.",
                "type": "string"
              },
              "databaseIds": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "uniprot": {
                    "$ref": "#/$defs/uniprot"
                  },
                  "genpept": {
                    "$ref": "#/$defs/genpept"
                  },
                  "wikidata": {
                    "$ref": "#/$defs/wikidata"
                  }
                }
              }
            }
          }
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/citation"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "reactions": {
      "title": "One or more reactions associated with enzyme.",
      "type": "array",
      "minItems": 1,
      "items": {
        "additionalProperties": false,
        "required": [
          "tailoring",
          "reactionSMARTS",
          "reactions",
          "evidence"
        ],
        "properties": {
          "tailoring": {
            "title": "Ontology-derived tailoring/maturation reaction term.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "$ref": "#/$defs/tailoringFunction"
            }
          },
          "description": {
            "title": "Additional information about tailoring/maturation reaction.",
            "type": "string"
          },
          "evidence": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "evidenceCode",
              "references"
            ],
            "properties": {
              "evidenceCode": {
                "title": "Evidence for enzymatic reaction and substrate specificity",
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "#/$defs/evidence"
                }
              },
              "references": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/citation"
                },
                "minItems": 1,
                "uniqueItems": true
              }
            }
          },
          "databaseIds": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "rhea": {
                "$ref": "#/$defs/rhea"
              },
              "ec": {
                "$ref": "#/$defs/ec"
              }
            }
          },
          "reactionSMARTS": {
            "title": "A reaction SMARTS pattern describing the (sub)structure to match and the reaction to perform.",
            "$ref": "#/$defs/reactionsmarts"
          },
          "reactions": {
            "type": "array",
            "title": "Substrate -> product(s) resulting from application of reaction SMARTS rule.",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "substrate",
                "products",
                "isIntermediate"
              ],
              "properties": {
                "substrate": {
                  "title": "Substrate (sub)structure as SMILES",
                  "type": "string"
                },
                "products": {
                  "title": "One or more product (sub)structures as SMILES",
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                },
                "forbidden_products": {
                  "title": "Product (sub)structures as SMILES that are absolutely forbidden to occur.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "isIntermediate": {
                  "title": "Is this validated reaction an intermediate step (i.e. not the final product)?",
                  "type": "boolean"
                },
                "description": {
                  "title": "Additional information about reaction example",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "accession": {
      "type": "string",
      "pattern": "^MITE\\d{7}$"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "retired"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "citation": {
      "type": "string",
      "pattern": "^doi:10\\."
    },
    "uniprot": {
      "title": "Uniprot ID reference.",
      "type": "string",
      "pattern": "^[A-Z0-9]+$"
    },
    "genpept": {
      "title": "GenBank GenPept ID (= protein ID, GenBank gene products)",
      "type": "string",
      "pattern": "^[A-Z]{3}[0-9]{5,7}\\.[0-9]+$"
    },
    "mibig": {
      "title": "MIBiG ID reference",
      "type": "string",
      "pattern": "^BGC\\d{7}$|^new\\d+$"
    },
    "wikidata": {
      "title": "Wikidata reference",
      "type": "string",
      "pattern": "^Q\\d+$"
    },
    "rhea": {
      "title": "RHEA cross-reference",
      "type": "string",
      "pattern": "^(\\d+)$"
    },
    "ec": {
      "title": "EC number (2-4 identifiers)",
      "type": "string",
      "pattern": "^[0-9]+(\\.[0-9]+){0,3}$"
    },
    "reactionsmarts": {
      "type": "string",
      "pattern": "^.+>>.+$"
    },
    "evidence": {
      "type": "string",
      "enum": [
        "Chemical probe",
        "Heterologous expression",
        "Inference from genomic data and chemical structure",
        "In vitro assay",
        "Isothermal titration calorimetry",
        "Knock-out studies",
        "Site-directed mutagenesis",
        "Surface plasmon resonance"
      ]
    },
    "inorganic": {
      "type": "string",
      "enum": [
        "Cu",
        "Fe",
        "Mg",
        "Mn",
        "Mo",
        "Ni",
        "Zn",
        "FeS"
      ]
    },
    "organic": {
      "type": "string",
      "enum": [
        "Ascorbic acid",
        "a-Ketoglutaric acid",
        "Adenosine triphosphate",
        "Biotin",
        "Cobalamin",
        "Coenzyme A",
        "Coenzyme B",
        "Coenzyme F420",
        "Coenzyme M",
        "Coenzyme Q10",
        "Cytidine triphosphate",
        "FAD",
        "Flavin mononucleotide",
        "Folate",
        "Glutathione",
        "Heme",
        "Lipoamide",
        "Methylcobalamin",
        "Menaquinone",
        "Methanofuran",
        "Molybdopterin",
        "NAD",
        "NADP",
        "PAPS",
        "Pyridoxal phosphate",
        "Pyrroloquinoline quinone",
        "SAM",
        "Tetrahydrobiopterin",
        "Tetrahydrofolic acid",
        "Tetrahydromethanopterin",
        "Thiamine pyrophosphate"
      ]
    },
    "tailoringFunction": {
      "type": "string",
      "enum": [
        "Acetylation",
        "Acylation",
        "Amination",
        "Biaryl bond formation",
        "Carboxylation",
        "Cyclization",
        "Deamination",
        "Decarboxylation",
        "Dehydration",
        "Dehydrogenation",
        "Demethylation",
        "Dioxygenation",
        "Epimerization",
        "Glycosylation",
        "Halogenation",
        "Heterocyclization",
        "Hydrolysis",
        "Hydroxylation",
        "Macrolactam formation",
        "Methylation",
        "Monooxygenation",
        "Oxidation",
        "Phosphorylation",
        "Prenylation",
        "Reduction",
        "Ring contraction",
        "Ring expansion",
        "Sulfation",
        "Sulfonation",
        "Other"
      ]
    }
  }
}