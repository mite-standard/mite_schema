{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "required": [
    "tailoring",
    "reactionSMARTS",
    "reactions",
    "evidence"
  ],
  "properties": {
    "tailoring": {
      "title": "Ontology-derived tailoring/maturation reaction term.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/tailoringFunction"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "description": {
      "title": "Additional information about tailoring/maturation reaction.",
      "type": "string"
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "evidenceCode",
        "references"
      ],
      "properties": {
        "evidenceCode": {
          "title": "Evidence for enzymatic reaction and substrate specificity",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "Heterologous expression",
              "Inference from genomic data and chemical structure",
              "In vitro assay",
              "Isothermal titration calorimetry",
              "Knock-out studies",
              "Site-directed mutagenesis",
              "Surface plasmon resonance"
            ]
          }
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "citation.json"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "databaseIds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rhea": {
          "title": "RHEA cross-reference",
          "type": "string",
          "pattern": "^(\\d+)$"
        },
        "ec": {
          "title": "EC number (2-4 identifiers)",
          "type": "string",
          "pattern": "^[0-9]+(\\.[0-9]+){0,3}$"
        }
      }
    },
    "reactionSMARTS": {
      "title": "A reaction SMARTS pattern describing the (sub)structure to match and the reaction to perform.",
      "type": "string",
      "pattern": "^.+>>.+$"
    },
    "reactions": {
      "type": "array",
      "title": "Substrate -> product(s) resulting from application of reaction SMARTS rule.",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "substrate",
          "products",
          "isIntermediate",
          "description"
        ],
        "properties": {
          "substrate": {
            "title": "Substrate (sub)structure as SMILES",
            "type": "string"
          },
          "products": {
            "title": "One or more product (sub)structures as SMILES",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "forbidden_products": {
            "title": "Product (sub)structures as SMILES that are absolutely forbidden to occur.",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "isIntermediate": {
            "title": "Is this validated reaction an intermediate step (i.e. not the final product)?",
            "type": "boolean"
          },
          "description": {
            "title": "Additional information about reaction example",
            "type": "string"
          }
        }
      }
    }
  },
  "$defs": {
    "tailoringFunction": {
      "type": "string",
      "enum": [
        "Acetylation",
        "Acylation",
        "Amination",
        "Biaryl bond formation",
        "Carboxylation",
        "Cyclization",
        "Deamination",
        "Decarboxylation",
        "Dehydration",
        "Dehydrogenation",
        "Demethylation",
        "Dioxygenation",
        "Epimerization",
        "Glycosylation",
        "Halogenation",
        "Heterocyclization",
        "Hydrolysis",
        "Hydroxylation",
        "Macrolactam formation",
        "Methylation",
        "Monooxygenation",
        "Oxidation",
        "Phosphorylation",
        "Prenylation",
        "Reduction",
        "Sulfation",
        "Other"
      ]
    }
  }
}
